<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<MessageStrip id="messageStrip1"
			showIcon="true" 
			type="{path:'/status', formatter: '.messageStripTypeFormat'}"
			text="{path:'/status', formatter: '.messageStripTextFormat'}" />

		<f:SimpleForm id="display_simpleformPublData"
			editable="false"
			layout="ResponsiveGridLayout"
			title="{title}"
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="2"
			columnsM="2"
			singleContainerFullSize="false" >
			<f:content>

			</f:content>
		</f:SimpleForm>

	<Title text="" />
	
	<Carousel id="idcarousel" class="sapUiContentPadding" loop="true" pages="{/pictures}">
		<pages>
			<Image src="{source}" alt="{orden}"/>
		</pages>
	</Carousel>

	</VBox>
</core:FragmentDefinition>