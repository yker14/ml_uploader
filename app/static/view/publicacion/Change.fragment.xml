<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:upload="sap.m.upload">
	<VBox class="sapUiSmallMargin">
		<MessageStrip id="messageStrip2"
			showIcon="true" 
			type="{path:'/status', formatter: '.messageStripTypeFormat'}"
			text="{path:'/status/status'}" />
			
		<f:SimpleForm id="simpleformPublData"
			editable="true"
			layout="ResponsiveGridLayout"
			title="{title}"
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="2"
			columnsM="2"
			singleContainerFullSize="false" >
			<f:content>


			</f:content>
		</f:SimpleForm>
		<f:SimpleForm id="simpleformImages"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Imagenes (los cambios a las imagenes no se pueden reversar)"
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="2"
			columnsM="2"
			singleContainerFullSize="false" >
			<f:content>
            <core:Title text="Carga"/>
				<!-- <upload:UploadSet
					id="uploadset"
					instantUpload="true"
					showIcons="false"
					uploadEnabled="true"
					fileTypes="jpeg,png,jpg"
					maxFileNameLength="30"
					maxFileSize="10000"
					mediaTypes="image/jpeg,image/png,image/jpg" 
					uploadUrl="/publicaciones/images/upload"
					items="{path: '/pictures', 
							sorter:{ path: 'orden' },
							templateShareable: false}">
					<upload:items>
						<upload:UploadSetItem
								fileName="{filename}"
								mediaType="image/{filetype}"
								url="{source}"
								thumbnailUrl="{source}"
								uploadState="Complete">
							
						</upload:UploadSetItem>
					</upload:items>
				</upload:UploadSet> -->
				<upload:UploadSet
					id="uploadset"
					instantUpload="true"
					showIcons="false"
					uploadEnabled="true"
					fileTypes="jpeg,png,jpg"
					maxFileNameLength="30"
					maxFileSize="10000"
					mediaTypes="image/jpeg,image/png,image/jpg" 
					uploadUrl="/publicaciones/images/upload" />
			
			<core:Title text="Prioridad"/>
			<VBox>
				<VBox>
					<Toolbar height="3rem" design="Transparent" />
				</VBox>
				<VBox	id="imgorderlist" 
						items="{path:'/pictures',
								sorter:{ path: 'orden' }}">
					<items>
					<Toolbar height="100%" design="Info" >
						<Image src="{source}" width="10%" />
						<Label text="{filename}"/>
						<ToolbarSpacer/>
						<Text text="Orden" />
						<Select	forceSelection="false"
								selectedKey="{orden}"
								change="onOrderChg"
								items="{path:'orderselect', templateShareable: false}">

							<core:Item key="{key}" text="{text}" />
						</Select>
					</Toolbar>
					</items>
				</VBox>
			</VBox>
			</f:content>
		</f:SimpleForm>

	</VBox>
</core:FragmentDefinition>