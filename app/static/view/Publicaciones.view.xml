<mvc:View controllerName="rshub.ui.view.Publicaciones"
          xmlns:m="sap.m"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:t="sap.ui.table"
          height="100%">
  <m:VBox>
    <m:Title text="THIS IS PUBLICACIONES" />

    <m:HBox height="10rem">
      <!--<m:Title text="FILTERS GOES HERE"/>-->
      <m:FacetFilter
        id="idFacetFilter"
        type="Simple"
        showPersonalization="true"
        showReset="true"
        reset="handleFacetFilterReset"
        confirm="handleConfirm"
        lists="{/ProductCollectionStats/Filters}">
          <m:FacetFilterList
            title="{type}"
            key="{key}"
            mode="MultiSelect"
            items="{path:'values', templateShareable: true}" >
              <m:FacetFilterItem
                text="{text}"
                key="{key}"
                count="{data}" />
          </m:FacetFilterList>
      </m:FacetFilter>
    </m:HBox>

    <m:HBox height="10rem">
      <t:Table id="urltable"
              selectionMode="None"
              visibleRowCount="7"
              ariaLabelledBy="title"
              rows="{/publicaciones}"
              width="100%">
        <t:extension>
          <m:OverflowToolbar>
            <m:Title id="title" text="Listado de Publicaciones"/>
            <m:ToolbarSpacer/>
            <m:Button	icon="sap-icon://synchronize"
                      tooltip="Refresh"
                      press="refreshPublData"/>

          </m:OverflowToolbar>
        </t:extension>

        <t:columns>
          <t:Column width="4rem" hAlign="Center">
            <m:Label text="ID" />
            <t:template>
              <m:Text text="{id}"/>
            </t:template>
          </t:Column>

          <t:Column width="4rem"> 
            <m:Label text="Detalle"/>
            <t:template>
              <m:Button icon="sap-icon://show" width="10%" press="onDetailViewPress"/>
            </t:template>
          </t:Column>
            
          <t:Column width="5%" hAlign="Center">
            <m:Label text="Imagen" />
            <t:template>
<!--
                <m:Text text="IMAGE HERE" wrapping="false" />
-->
                <m:Image src="{source}" width="100%" />
            </t:template>
          </t:Column>

          <t:Column width="10%" hAlign="Center"> 
            <m:Label text="Status" />
            <t:template>
              <m:Text text="{status}" wrapping="false" />
            </t:template>
          </t:Column>

          <t:Column width="30%" hAlign="Center">
            <m:Label text="Title" />
            <t:template>
              <m:Text text="{title}" wrapping="false" />
            </t:template>
          </t:Column>

          <t:Column width="20%" hAlign="Center">
            <m:Label text="Brand" />
            <t:template>
              <m:Text text="{brand}" wrapping="false" />
            </t:template>
          </t:Column>

          <t:Column width="10%" hAlign="Center">
            <m:Label text="Price" />
            <t:template>
              <m:Text text="${price}" wrapping="false" />
            </t:template>
          </t:Column>

          <t:Column width="10%" hAlign="Center">
            <m:Label text="URL Origen" />
            <t:template>
              <m:Link href="{url_orig}" text="{fuente}" target="_blank"/>
            </t:template>
          </t:Column>

          <t:Column width="10%" hAlign="Center">
            <m:Label text="URL MercadoLibre" />
            <t:template>
              <m:Link href="{url_ml}" text="MercadoLibre" target="_blank"/>
            </t:template>
          </t:Column>

        </t:columns>
      </t:Table>
    </m:HBox>

  </m:VBox>
</mvc:View>
